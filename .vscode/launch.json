{
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "stopOnEntry": false,
            "args": ["--no-cov"],
            "autoReload": {
                "enable": true
              }
        },
    ],
    "version": "0.2.0"
}
